---

<Layout>
	<div class="flex flex-col w-full justify-bewteen gap-8">
		<div class="flex flex-col gap-4 w-3/5 h-full bg-background rounded-[25px] p-6 ">
			<p class="text-tertiary font-medium">Materia Prima</p>
			<div class="flex justify-center gap-8 w-full h-full">
			<IngredientBar text='Harina' total={140} current={60} unit='kg' />
			<IngredientBar text='Azucar' total={120} current={90} unit='kg' />
			<IngredientBar text='Mantequilla' total={120} current={80} unit='kg' />
			<IngredientBar text='Huevos' total={300} current={120} unit='U' />
			<IngredientBar text='Leche' total={80} current={40} unit='L' />
		
		</div>
		</div>
		<div class="flex flex-col gap-4 w-3/5 h-full bg-background rounded-[25px] p-6 ">
			<p class="text-tertiary font-medium">Materia Prima</p>
			<div class="flex justify-center gap-8 w-full h-full">
				<VerticalImgContainer title={"Pan"} current={50} img={pan} />
				<VerticalImgContainer title={"Galletas"} current={200} img={galletas} />
				<VerticalImgContainer title={"Ponques"} current={40} img={ponques} />
			</div>
			
		</div>
	
	</div>
	
</Layout>
